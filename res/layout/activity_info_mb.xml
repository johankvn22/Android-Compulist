<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".info_mb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:layout_marginStart="-4dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="420dp"
                    android:layout_height="360dp"
                    android:src="@drawable/mb_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <ImageView
                    android:id="@+id/info_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.043"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.105"
                    app:srcCompat="@drawable/img" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X299 AORUS Gaming 9 (rev. 1.0)"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intel® X299 Chipset"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="150dp">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intel X299 Gaming motherboard with RGB Fusion, Digital LED, Triple M.2 with Thermal Guard, ESS SABRE 9018K2M DAC, Killer DoubleShot™ Pro, Front and rear USB 3.1 Gen 2 Type-C"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spesifikasi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="150dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Supports Intel® Core™ X-series Processor Family"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quad Channel Non-ECC Unbuffered DDR4, 8 DIMMs, DDR4400+(OC)"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ASMedia 3142 USB 3.1 Gen 2 with USB Type-C™ and Type-A"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Front USB 3.1 Gen 2 Header"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RGB FUSION with Multi-Zone Digital LED Light Show design, support digital LED and RGB LED strips"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sound BlasterX 720°, the top-of-the-line audio engine solution for 4K gaming and entertainment"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lightning-Fast Intel® Thunderbolt™ 3 support by option AIC"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GIGABYTE UEFI DualBIOS™ with Q-Flash Plus USB port"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/amazon_mb"
                        android:layout_width="220dp"
                        android:layout_height="70dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Amazone"
                            android:textColor="#000000"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="40dp"
                            android:text="Rp 8.000.000 - Rp 8.300.000"
                            android:textColor="#000000"
                            android:textSize="15sp"></TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/alibaba_mb"
                        android:layout_width="220dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginVertical="10dp"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tokopedia"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 7.530.000 - Rp 8.200.000"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:layout_marginTop="40dp"
                            android:layout_marginStart="20dp">
                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/shopee_mb"
                        android:layout_width="220dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginVertical="10dp"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shopee"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 7.890.000 - Rp 8.300.000"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:layout_marginTop="40dp"
                            android:layout_marginStart="20dp">
                        </TextView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>